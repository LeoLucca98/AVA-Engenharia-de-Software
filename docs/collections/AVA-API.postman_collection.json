    },
    {
      "name": "Recommendation Service",
      "item": [
        {
          "name": "Get My Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rec/recommendations/me?limit=10",
              "host": ["{{base_url}}"],
              "path": ["rec", "recommendations", "me"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rec/recommendations/user/{{user_id}}?limit=10",
              "host": ["{{base_url}}"],
              "path": ["rec", "recommendations", "user", "{{user_id}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Recommendations",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": {{user_id}},\n  \"course_id\": 1,\n  \"limit\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/rec/recommendations/",
              "host": ["{{base_url}}"],
              "path": ["rec", "recommendations", ""]
            }
          }
        },
        {
          "name": "Send Interaction Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": {{user_id}},\n  \"lesson_id\": 1,\n  \"interaction_type\": \"view\",\n  \"payload\": {\n    \"duration\": 120,\n    \"completed\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/rec/events/interaction",
              "host": ["{{base_url}}"],
              "path": ["rec", "events", "interaction"]
            }
          }
        }
